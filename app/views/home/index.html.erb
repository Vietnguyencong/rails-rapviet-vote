
<div class="container">
  <%if !current_user%>
    <div class="col-12 col-sm-4 mx-auto  p-0" style="margin-top: 0px;">
        <div class="panel panel-default ">
          <div class="panel-body p-3">
              <button type="submit" class="btn btn-success btn-block" style="margin-top: 10px">
                <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path,class:"btn btn-success btn-bloc" %>
              </button>
          </div>
          <div class="text-center"><p class="font-weight-light"><strong>You must login to Vote!</strong></p></div>
        </div>
    </div>
    <hr class="col-12 col-sm-6 mx-auto">
  <%end%>  

  <!--after-user-vote view-->
  
  <% if current_user %>
          <h3 class="m-0">Welcome <%=current_user.name%> to rapviet vote </h3>

          <%if current_user.voted%>
             <div class="row">
              <div class="col col-5 ">
                <%if current_user.voted%>
                  <div class="">you voted for <%=current_user.get_voted_rapper.name%> </div>
                  <%if current_user.add_lucky_number%>
                    <div class="">Your lucky number: <%=current_user.lucky_number%> </div>
                  <%else%>
                    <%= render 'rappers/form', rapper: current_user.get_voted_rapper %>

                  <%end%>x
                <%end%>
                      
              </div>
              <div class="col col-7  ">
                  <div class="card mx-auto"  style="width: 17rem;" >
                    <img src="https://static.wikia.nocookie.net/rapviet/images/e/e0/MCk.jpg/revision/latest/scale-to-width-down/538?cb=20200905034244&path-prefix=vi" class="card-img-top" alt="...">
                    <div class="card-body">
                      <div class="mb-3">
                        <h3><%=current_user.get_voted_rapper.name%></h3>
                      </div>
                    <div class="font-weight-light">Votes counter: <%=current_user.get_voted_rapper.get_upvotes.size%> voters</div>
                    <div id="button" class="fb-share-button mb-1 mt-1" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button" data-size="large"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Chia sẻ</a></div>

                </div>
          </div>
              </div>
            </div>
          <%end%>
      <%end%>
  

  <!--after-user-vote view-->

  <!--the rules and clock -->
  <div class="row row-lg mt-2 mb-2 text-center">
      <p>để đạt được giải thưởng trị giá $xx. Chỉ có 1 người chiến thắng và giành được phần thưởng may mắn </p>
      <p>Bạn chỉ có thể chọn 1 rapper </p>
      <p>Bạn không thể đổi sự bình chọn sau khi bạn vote </p>
      <p>Bạn cần phải click vào share website này vào tường</p>
      <p>bạn cần chọn lucky number </p>
  </div>

    <div class="row">
      <%= bar_chart @data, library: {
        legend: {position: "left"},
    }%>
    <div>
 <!--the rules and clock -->
<br>

<div class="row justify-content-center">
<% @rappers.each do |rapper| %>
        <div classs="col col-3">
          <div class="card m-3" >
              <img src="https://static.wikia.nocookie.net/rapviet/images/e/e0/MCk.jpg/revision/latest/scale-to-width-down/538?cb=20200905034244&path-prefix=vi" class="card-img-top" alt="...">
              <div class="card-body text-center">
                <div class="mb-3">
                  <h3><%=rapper.name%></h3>
                  <%if !current_user %>
                    <!-- Button trigger modal -->
                      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Vote</button>
                      <!-- Modal -->
                      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                          <div class="modal-content">
                            <div class="modal-body" height="400">
                              <div>
                                <p><strong><%=rapper.name%></strong>: Thank you for believing in me!!</p> 
                                <p><strong>me</strong>: let me sign in then I will vote for you!! </p>
                              </div>
                              <%=link_to "Sign In by Facebook", user_facebook_omniauth_authorize_path, class:"btn btn-lg btn-primary"%>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- Modal -->
                  <%else%>
                    <%if !current_user.voted%>
                      <%= link_to "vote", like_rapper_path(rapper), method: :put, class: "btn btn-default btn-md btn-warning",:data => {:confirm => 'Are you Sure you want to vote for this man?'} %>
                      
                    <%end%>
                  <%end%>
                </div>
                <div class="font-weight-light">Votes counter: <%=rapper.get_upvotes.size%> voters</div>
              </div>
          </div>
        </div>
<% end %>
</div>

</div>


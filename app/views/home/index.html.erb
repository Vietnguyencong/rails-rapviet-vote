
<%if current_user%>
    <%= current_user.inspect%>
<%end%>
<% unless current_user %> 
  <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
  <%= link_to "Sign up", new_user_registration_path %>
<% else %>
  <%= current_user[:name] %>
  <%= link_to "Logout", destroy_user_session_path %>
<% end %><br>
<%= link_to 'New Rapper', new_rapper_path %><br>

<hr>
<!--/.Navbar-->

<nav class="navbar navbar-dark bg-dark">
  <a class="navbar-brand" href="/">Rapviet</a>
  <div class=" text-left"><%=link_to "Logout",destroy_user_session_path, class:"btn btn-sm btn-danger" %></div>
</nav>

<!--/.Navbar-->

<div class="container">
  <%if !current_user%>
    <div class="col-12 col-sm-4 mx-auto  p-0" style="margin-top: 0px;">
        <div class="panel panel-default ">
          <div class="panel-body p-3">
            <form id="login" method="post" action="/user/login/">
              <button type="submit" class="btn btn-success btn-block" style="margin-top: 10px">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Login by Facebook
              </button>
            </form>
          </div>
          <div class="text-center"><p class="font-weight-light">You must login to Vote!</p></div>
        </div>
    </div>
  <%end%>  
    <hr class="col-12 col-sm-6 mx-auto">

    <div class="row">
      <%= bar_chart @data%>
    <div>

<br>
  <div class="row m-3">
<% @rappers.each do |rapper| %>
      <div class="col col-4">
          <div class="card m-4" style="width: 18rem;">
              <img src="https://static.wikia.nocookie.net/rapviet/images/e/e0/MCk.jpg/revision/latest/scale-to-width-down/538?cb=20200905034244&path-prefix=vi" class="card-img-top" alt="...">
              <div class="card-body text-center">
                <div class="mb-3">
                  <h3><%=rapper.name%></h3>
                  <%if !current_user %>
                    <!-- Button trigger modal -->
                      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                        Vote
                      </button>
                      <!-- Modal -->
                      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                          <div class="modal-content">
                            <div class="modal-body" height="400">
                              <%=link_to "Sign In by Facebook", user_facebook_omniauth_authorize_path, class:"btn btn-lg btn-primary"%>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- Modal -->
                  <%else%>
                    <%if !current_user.voted%>
                      <%= link_to like_rapper_path(rapper), method: :put, class: "btn btn-default btn-md btn-warning" do %>
                        <span class="glyphicon glyphicon-chevron-up">Vote</span>
                      <% end %>
                    <%else%>
                      <%if rapper.id == current_user.get_voted_rapper.id%>
                        you voted for <%=rapper.name%>
                      <%end%>
                    <%end%>
                  <%end%>
                </div>
                <div class="font-weight-light">Votes counter: <%=rapper.get_upvotes.size%> voters</div>
              </div>
          </div>
      </div>
<% end %>
</div>

</div>

